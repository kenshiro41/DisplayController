{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "bun vite:build",
    "beforeDevCommand": "bun vite:dev",
    "devPath": "http://localhost:7000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Display Controller",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "./icons/icon.png"
    },
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Kenshiro",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.example.display-controller",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "height": 500,
        "width": 400,
        "fullscreen": false,
        "resizable": true,
        "title": "DisplayController"
      }
    ]
  }
}
